<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.company.redcode.royalcryptoexchange">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".auth.SignUpActivity"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name=".auth.SignInActivity"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:windowSoftInputMode="adjustPan">
            >
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.BuyActivity"
            android:label="Buy activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity android:name=".TradeConfirmActivity" />
        <activity android:name=".ui.ProfileActivity"></activity>
    </application>

</manifest>