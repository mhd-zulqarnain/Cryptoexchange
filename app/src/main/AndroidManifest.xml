<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.company.redcode.royalcryptoexchange">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".auth.SignUpActivity"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".auth.SignInActivity"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.BuyingDetailActivity"
            android:label="Buy activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity android:name=".TradeConfirmActivity" />
        <activity
            android:name=".ui.ProfileActivity"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan">

        </activity>
        <activity
            android:name=".DrawerActivity"
            android:label="@string/title_activity_drawer"
            android:theme="@style/AppTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.admin.camerawork.CameraActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".BuyActivity"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/BuyTheme">

        </activity>

        <activity android:name=".SellActivity"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/BuyTheme"/>
    </application>

</manifest>