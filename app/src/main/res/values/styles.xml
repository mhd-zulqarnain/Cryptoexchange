<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgoundTheme</item>

    </style>

    <style name="BuyTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgoundBuy</item>
<!--   Spinner Divider -->
        <item name="android:dropDownListViewStyle">@style/mySpinnerStyle</item>

        <item name="android:editTextColor">@color/BuyActivityText</item>
        <item name="android:textColorPrimary">@color/BuyActivityText</item>
        <item name="android:textColorSecondary">@color/BuyActivityText</item>
        <item name="android:textColorTertiary">@color/BuyActivityText</item>
        <item name="android:textColorPrimaryInverse">@color/BuyActivityText</item>
        <item name="android:textColorSecondaryInverse">@color/BuyActivityText</item>
        <item name="android:textColorTertiaryInverse">@color/BuyActivityText</item>
    </style>

    <style name="searchableStyle" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">#000</item>
        <item name="android:textColorHint">#5000</item>
    </style>

    <style name="menuItem">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginLeft">23dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="drawerToolbarTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="android:textColorPrimary">@color/whitColor</item>

        <item name="actionMenuTextColor">@color/whitColor</item>

        <item name="android:textColorSecondary">@color/whitColor</item>

    </style>
    <!--   Spinner Divider -->
    <style name="mySpinnerStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">#d6a9a0a0</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <!--Sign up edittext style-->

    <style name="signUpEditTextStyle">
        <item name="android:textSize">15sp</item>
  <!--      <item name="android:layout_marginTop">10dp</item>-->
    </style>



    <style name="adsActivityStyle">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/oswald_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>

    </style>

    <style name="numberPicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/backgoundTheme</item>
        <item name="colorPrimaryDark">@color/backgoundTheme</item>
        <item name="colorAccent">@color/backgoundTheme</item>
    </style>

    <!--end-->
    <style name="ProgressDialogtheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="editTextStyle">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginLeft">23dp</item>
        <item name="android:gravity">left</item>
        <item name="android:background">@drawable/layout_curve_edit_text</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="buyActivityText">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/oswald_regular</item>
    </style>

    <style name="bankDialogText">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/oswald_regular</item>
    </style>

    <style name="editLableStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/whitColor</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/whitColor</item>
        <item name="colorControlNormal">@color/whitColor</item>
        <item name="colorControlActivated">@color/whitColor</item>
    </style>




</resources>
