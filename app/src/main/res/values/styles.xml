<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgoundTheme</item>

    </style>

    <style name="menuItem">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:layout_marginLeft">23dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="buyActivityText">
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/oswald_regular</item>
    </style>

</resources>
