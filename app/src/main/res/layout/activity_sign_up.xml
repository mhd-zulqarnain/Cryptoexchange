<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/royalcryptobackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="19.05"
        android:id="@+id/mainlayout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >







        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"

            android:text="Sign up"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />


        <TextView

            style="@style/signUpEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:text="First Name" />

        <EditText
            android:id="@+id/ed_first_name"
            style="@style/signUpEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:drawableRight="@drawable/ic_person_outline_black_24dp"
            android:hint="First Name"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:singleLine="true" />


        <TextView

            style="@style/signUpEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:text="Last Name" />

        <EditText
            android:id="@+id/ed_last_name"
            style="@style/signUpEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:drawableRight="@drawable/ic_person_outline_black_24dp"
            android:hint="Last Name"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:singleLine="true" />

        <TextView
            style="@style/signUpEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:text="Email" />

        <EditText
            android:id="@+id/ed_email"
            style="@style/signUpEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:drawableRight="@drawable/ic_email_black_24dp"
            android:hint="Email"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true" />



        <TextView

            style="@style/signUpEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:text="Mobile #" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1.3"
            android:weightSum="1.1"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="+92"
                android:textSize="15dp"
                />

            <EditText
                android:id="@+id/ed_mobile_number"
                style="@style/signUpEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@drawable/ic_local_phone_black_24dp"
                android:hint="Mobile #"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="10"
                android:maxLines="1"
                android:singleLine="true" />

        </LinearLayout>







        <TextView

            style="@style/signUpEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:text="Password" />

        <EditText
            android:id="@+id/ed_pasword"
            style="@style/signUpEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:hint="Password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:drawableRight="@drawable/ic_vpn_key_black_24dp"
            />

        <TextView

            style="@style/signUpEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:text="CNIC" />

        <EditText
            android:id="@+id/ed_cnic"
            style="@style/signUpEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:drawableRight="@drawable/ic_cnic"
            android:hint="12345-1234567-1"
            android:imeOptions="actionDone"
            android:maxLength="15"
            android:maxLines="1"
            android:singleLine="true"
            android:digits="0123456789 -"

            />


        <TextView
            style="@style/signUpEditTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Date of Birth" />

        <TextView
            android:id="@+id/ed_dob"
            style="@style/signUpEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_date_black"
            android:hint="DD/MM/YYYY"

            android:inputType="datetime"
            android:maxLines="1"
            android:singleLine="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:background="@color/whitColor" />



        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            >

            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:background="@drawable/button_yellow_border"
                android:onClick="signUp"
                android:text="@string/action_sign_up"
                android:textColor="#Fff"
                android:textSize="20dp" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_marginBottom="30dp"
            >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="4"
                android:text="Already have an account?"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="signIn"
                android:textColor="#00a927"
                android:text="@string/sign_in_underline"
                android:textSize="13sp" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>