<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_gradient_profile"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:weightSum="39">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:weightSum="7"

            >

            <TextView

                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="clip_vertical"
                android:layout_weight="5"
                android:fontFamily="@font/oswald_regular"
                android:text="Profile "
                android:textSize="28sp" />

            <TextView
                style="@style/signUpEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text="Two Factor"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1.3">

            </LinearLayout>

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/profile_twofactor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                app:kswTextOff="0"
                app:kswTextOn="1"
                app:kswThumbColor="#c2d1bd"
                app:kswThumbWidth="30dp"
                app:kswTintColor="#2c2aff2e" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2.5"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                style="@style/signUpEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"
                android:text="First Name"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/profile_fname"
                style="@style/signUpEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@null"
                android:drawableRight="@drawable/ic_person_outline_black_24dp"
                android:hint="Enter First name"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2.5"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                style="@style/signUpEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"


                android:text="Last Name "
                android:textColor="#fff" />

            <EditText
                android:id="@+id/profile_lastname"
                style="@style/signUpEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@null"
                android:drawableRight="@drawable/ic_person_outline_black_24dp"
                android:hint="Enter Last name"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2.5"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                style="@style/signUpEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"
                android:text="Email "
                android:textColor="#fff" />

            <EditText
                android:id="@+id/profile_email"
                style="@style/signUpEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@null"
                android:drawableRight="@drawable/ic_email_black_24dp"
                android:enabled="false"
                android:hint="Enter Email "
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2.5"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                style="@style/signUpEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"
                android:inputType="number"
                android:text="Mobile #"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/profile_mob"
                style="@style/signUpEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@null"
                android:drawableRight="@drawable/ic_local_phone_black_24dp"
                android:enabled="false"

                android:hint="Enter Mobile Number "
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2.5"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                style="@style/signUpEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"
                android:text="Password "
                android:textColor="#fff" />

            <EditText
                android:id="@+id/profile_pass"
                style="@style/signUpEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@null"
                android:drawableRight="@drawable/ic_vpn_key_black_24dp"
                android:hint="Enter Password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2.5"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                style="@style/signUpEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"
                android:text="Retype"
                android:textColor="#fff" />

            <EditText
                android:id="@+id/profile_repass"
                style="@style/signUpEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@null"
                android:drawableRight="@drawable/ic_person_outline_black_24dp"
                android:hint="Retype Password"
                android:inputType="textPassword"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:singleLine="true" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2.5"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                style="@style/signUpEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"
                android:text="CNIC "
                android:textColor="#fff" />

            <EditText
                android:id="@+id/profile_cnic"
                style="@style/signUpEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@null"
                android:drawableRight="@drawable/ic_vpn_key_black_24dp"
                android:hint="Enter CNIC"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="13"
                android:maxLines="1"
                android:singleLine="true" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/btn_add_bank"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/addaccount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@drawable/button_payment_layout"
                android:drawableRight="@drawable/ic_local_atm_black_24dp"
                android:text="Payment Method"
                android:textColor="#ffffff"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/docimage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.5"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:id="@+id/attach_img_1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"

                android:src="@drawable/ic_no_img_24dp" />

            <ImageView
                android:id="@+id/attach_img_2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/ic_no_img_24dp" />

            <ImageView
                android:id="@+id/attach_img_3"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/ic_no_img_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:id="@+id/adddoc"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/btn_add_img"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@drawable/button_payment_layout"
                android:drawableRight="@drawable/ic_note_add_black_24dp"
                android:text="Add Documents"
                android:textColor="#ffffff"
                android:textSize="12sp" />


        </LinearLayout>


        <TextView
            style="@style/signUpEditTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="Description"
            android:textColor="#fff" />


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/profile_terms"
            style="@style/signUpEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.3"
            android:hint="Enter your Description"
            android:inputType="textMultiLine"
            android:lines="4"
            app:met_baseColor="#ffffff"
            app:met_primaryColor="#45a12e"
            app:met_textColor="#fff" />
        <Button
            android:id="@+id/btnprofileupdate"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2.5"
            android:background="@drawable/layout_curve_btn_submit"
            android:onClick="profileValidiation"
            android:text="Update"
            android:textColor="#fff" />


    </LinearLayout>


</ScrollView>

