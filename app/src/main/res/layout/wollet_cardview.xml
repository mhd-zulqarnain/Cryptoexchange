<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#dededf"
    android:orientation="vertical"
    android:padding="1dp">

    <android.support.v7.widget.CardView
        android:id="@+id/android_card_view_example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#d1cece">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/cardview_image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="18dp"
                android:src="@drawable/openbitcoin" />

            <TextView
                android:textColor="#000"
                android:id="@+id/catagory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/cardview_image2"
                android:paddingBottom="5dp"
                android:text="BTC Voilet"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/catagory"
                android:layout_toRightOf="@+id/cardview_image2"
                android:text="Balance"
                android:textColor="#8b8b8b"
                android:textSize="22dp"/>

            <Button
                android:id="@+id/send"
                android:layout_width="115dp"
                android:layout_height="55dp"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="80dp"
                android:background="#f7f3f3"
                android:text="Send"
                android:drawableTop="@drawable/ic_send_icon"
                android:textColor="#080808" />

            <Button
                android:id="@+id/recieve"
                android:layout_width="115dp"
                android:layout_height="55dp"
                android:layout_marginLeft="175dp"
                android:layout_marginTop="80dp"
                android:background="#f7f3f3"
                android:text="Recieve"
                android:textColor="#080808"
                android:drawableTop="@drawable/ic_recived" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
