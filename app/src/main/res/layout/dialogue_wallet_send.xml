<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00000000"
    android:gravity="center|center_vertical"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:gravity="center"
        android:weightSum="10"
        android:orientation="vertical"
        android:background="@drawable/terms_back_ground"
        android:paddingBottom="50dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:fontFamily="@font/oswald_regular"
            android:text="Send Coins"
            android:textSize="25sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                style="@style/bankDialogText"
                android:text="Amount " />

            <EditText
                android:id="@+id/amount"
                android:layout_width="0dp"
                android:inputType="number"


                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:width="0dp"
                android:hint="Enter Amount Here"
                android:textColorHint="#afabab"
                android:textSize="14sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_wallet_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Wallet Address"
                style="@style/bankDialogText"/>

            <EditText
                android:id="@+id/Ed_wallet_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:maxLines="1"
                android:hint="Wallet Address"
                android:textColorHint="#afabab"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="0.8"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_wallet_fees"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Fees"
                style="@style/bankDialogText"/>

            <EditText
                android:id="@+id/Ed_wallet_fees"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:hint="Wallet Address"
                android:maxLines="1"
                android:textColorHint="#afabab"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:weightSum="1"
            >

            <TextView
                android:id="@+id/wallert_descbtion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Wallet Description: "
                style="@style/bankDialogText"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:weightSum="1"
            >

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="0dp"
                android:layout_weight="1"
                app:met_baseColor="#ffffff"
                app:met_primaryColor="#45a12e"
                app:met_errorColor="#ba020e"
                app:met_textColor="#fff"

                app:met_minCharacters="1"
                app:met_maxCharacters="200"
                android:inputType="textMultiLine"
                android:lines="2"
                android:layout_height="wrap_content"
                android:hint="Description"/>




        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/wallet_cancel"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:text="Cancel"
                style="@style/bankDialogText"
                android:background="@drawable/layout_curve_btn_cancel"
                android:layout_marginRight="22dp"

                />

            <Button
                android:id="@+id/wallet_ok"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:background="@drawable/layout_curve_btn_submit"
                style="@style/bankDialogText"/>

        </LinearLayout>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/btn_clos"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="top|right"
        android:clickable="true"
        android:src="@drawable/ic_cancel_black_24dp" />
    </FrameLayout>

</LinearLayout>