<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00000000"
    android:gravity="center|center_vertical"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/terms_back_ground"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btn_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="top|right"
            android:clickable="true"
            android:src="@drawable/ic_cancel_black_24dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Amount "
                android:textSize="14sp" />

            <EditText
                android:id="@+id/amount"
                android:layout_width="0dp"
                android:inputType="number"


                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:width="0dp"
                android:hint="Enter Amount Here"
                android:textColorHint="#afabab"
                android:textSize="14sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_wallet_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Wallet Address"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/Ed_wallet_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:hint="Wallet Address"
                android:textColorHint="#afabab"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_wallet_fees"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Fees"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/Ed_wallet_fees"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:hint="Wallet Address"
                android:textColorHint="#afabab"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:weightSum="1"
            >

            <TextView
                android:id="@+id/wallert_descbtion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Wallet Description: "
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:weightSum="1"
            >

            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="0dp"
                android:layout_weight="1"
                app:met_baseColor="#ffffff"
                app:met_primaryColor="#45a12e"
                app:met_errorColor="#ba020e"
                app:met_textColor="#fff"

                app:met_minCharacters="150"
                app:met_maxCharacters="200"
                android:inputType="textMultiLine"
                android:lines="4"
                android:layout_height="wrap_content"
                android:hint="Description"/>




        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="2"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_margin="22dp"
            >

            <Button
                android:id="@+id/wallet_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textSize="16sp"
                android:background="@drawable/layout_curve_btn_cancel"
                android:layout_marginRight="22dp"

                />

            <Button
                android:id="@+id/wallet_ok"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:background="@drawable/layout_curve_btn_submit"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>