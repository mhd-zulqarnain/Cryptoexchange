<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signupbackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:weightSum="15"
        >

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Support"
            android:layout_weight="1.5"
            android:textSize="20sp"
            android:textStyle="bold"
            />


            <TextView
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Write New Request"
                android:layout_weight="1.5"
                android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="20dp" />
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                >
            </Spinner>

        </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Messege"
                android:textSize="20sp"
                android:layout_weight="1"
                />

            <EditText
                android:id="@+id/messege"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"

                android:textColor="#000"
                android:background="#ffff">
            </EditText>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1"
             android:weightSum="2"
             android:orientation="horizontal"
             >

             <TextView
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="0.9"
                 android:text="Add Document"
                 android:textSize="20sp"

                 />


             <ImageButton
                 android:id="@+id/btn_add"
                 android:layout_width="0dp"
                 android:layout_weight="0.2"
                 android:layout_height="30dp"
                 android:paddingRight="10dp"
                 android:background="@drawable/ic_add_black_24dp"
                 />


         </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:weightSum="8"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/attach_img_1"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="80dp"
                android:src="@drawable/ic_no_img_24dp" />
            <ImageView
                android:id="@+id/attach_img_2"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="80dp"
                android:src="@drawable/ic_no_img_24dp" />
            <ImageView
                android:id="@+id/attach_img_3"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="80dp"
                android:src="@drawable/ic_no_img_24dp" />
            <ImageView
                android:id="@+id/attach_img_4"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="80dp"
                android:src="@drawable/ic_no_img_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:weightSum="2"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                ></LinearLayout>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="  Submit  "
                android:background="@drawable/layout_curve_btn_submit"
                android:textSize="20sp"/>

            </LinearLayout>




    </LinearLayout>
</LinearLayout>