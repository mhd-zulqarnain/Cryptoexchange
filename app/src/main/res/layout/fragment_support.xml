<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/color_gradient_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:weightSum="11.5"
        >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="clip_vertical"
            android:layout_height="0dp"
            android:text="Support        "
            android:textSize="28sp"
            android:fontFamily="@font/oswald_regular"

            />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fontFamily="@font/oswald_regular"
                android:text="Write New Request"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="24sp" />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginTop="10dp"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:weightSum="3"
    android:orientation="horizontal"
    >

    <TextView
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="20dp" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:hint="Enter Title" />


</LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_height="0dp"
                android:text="Messege"
                android:textSize="20sp"
                android:layout_weight="1"
                />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            app:met_baseColor="#ffffff"
            app:met_primaryColor="#45a12e"
            app:met_errorColor="#ba020e"
            app:met_textColor="#fff"
            app:met_minCharacters="1"
            app:met_maxCharacters="200"
            android:id="@+id/et_supportmessage"
            android:inputType="textMultiLine"
            android:lines="3"
            android:layout_height="0dp"
            android:hint="Enter your Message"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_weight="0.8"
            android:id="@+id/adddoc"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/btn_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@drawable/button_payment_layout"
                android:drawableRight="@drawable/ic_note_add_black_24dp"
                android:text="Add Documents"
                android:textColor="#ffffff"
                android:textSize="12sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="8"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/attach_img_1"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="80dp"
                android:src="@drawable/ic_no_img_24dp" />

        </LinearLayout>



            <Button

                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#fff"
                android:layout_marginTop="15dp"
                android:text="          Submit          "
                android:fontFamily="@font/oswald_bold"
                android:id="@+id/btn_supportsubmit"
                android:layout_gravity="center"
                android:background="@drawable/layout_curve_btn_submit"
                />

            </LinearLayout>




    </LinearLayout>