<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="42dp"
    android:orientation="vertical"
    android:background="@drawable/layout_curve_edit_text"
    android:gravity="center"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:fontFamily="@font/oswald_regular"
        android:textSize="20dp"
        android:textColor="#838383"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        />
    <EditText
        android:id="@+id/ed_old_pass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="12dp"
        android:hint="Old pasword"
        android:textColor="#000"
        android:textColorHint="#DDAAAAAA"
        android:inputType="textPassword"

        android:background="@drawable/drawer_selected_item"
        />
    <EditText
        android:id="@+id/ed_new_pass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="12dp"
        android:hint="New password"
        android:inputType="textPassword"
        android:textColor="#000"
        android:textColorHint="#DDAAAAAA"
        android:background="@drawable/drawer_selected_item"
        />
    <EditText
        android:id="@+id/ed_confirm_pass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="12dp"
        android:hint="New password"
        android:textColor="#000"
        android:textColorHint="#DDAAAAAA"
        android:inputType="textPassword"
        android:background="@drawable/drawer_selected_item"
        />
    <Button
        android:id="@+id/btn_verify"
        android:background="@drawable/layout_curve_btn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp">


    </LinearLayout>

</LinearLayout>