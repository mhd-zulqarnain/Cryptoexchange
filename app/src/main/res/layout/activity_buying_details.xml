<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="18dp"
    android:orientation="vertical"
    android:layout_gravity="center"
   >

    <TextView
        android:id="@+id/tv_title_trade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald_regular"
        android:text="Buying trade details "
        android:layout_margin="8dp"
        android:layout_marginTop="12dp"
        android:textSize="35dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" Account Title "
            style="@style/buyActivityText"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            style="@style/buyActivityText"
            android:text="Mr Seller"
           />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Limit "
            style="@style/buyActivityText"/>

        <TextView
            android:id="@+id/tv_limit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="1200"
            style="@style/buyActivityText" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Amount "
            style="@style/buyActivityText"/>

        <TextView
            android:id="@+id/tv_coin_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="3BTC"
            style="@style/buyActivityText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Price "
            style="@style/buyActivityText"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="12000"
            style="@style/buyActivityText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"

        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Payment method "
            style="@style/buyActivityText" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_terms"
                style="@style/buyActivityText"/>

            <TextView
                android:id="@+id/tv_payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Method : Bank Transfer"
                style="@style/buyActivityText"/>


        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/chk_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept buyer terms and conditions" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <EditText
                android:id="@+id/pkr_ed"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="8dp"
            android:layout_weight="2"
            android:background="@drawable/white_curve_btn"
            android:gravity="center"
            android:hint="PKR"
            android:inputType="number"
            android:textColor="#DDAAAAAA"
            android:textColorHint="#DDAAAAAA"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/ecuurency_ed"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="8dp"
            android:layout_weight="2"
            android:background="@drawable/white_curve_btn"
            android:gravity="center"
            android:hint="BTC"
            android:inputType="number"
            android:enabled="false"
            android:textColorHint="#DDAAAAAA"
            android:textColor="#DDAAAAAA"
            android:textSize="15dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/ed_terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_margin="8dp"
        android:imeOptions="actionDone"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="#000"
        android:textColorHint="#DDAAAAAA"
        android:hint="Comments  "
        android:background="@drawable/white_curve_btn"
        android:lines="3"
        />

    <Button
        android:id="@+id/btn_trade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center"
        android:textColor="@color/backgoundTheme"
        android:background="@drawable/layout_curve_btn_paid"
        android:text="Trade" />
</LinearLayout>